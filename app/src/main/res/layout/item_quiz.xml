<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_vertical_button_option"
        android:layout_marginStart="@dimen/margin_start_button_option"
        android:layout_marginEnd="@dimen/margin_end_button_option"
        android:layout_marginTop="@dimen/margin_top_button_option"
        android:layout_marginBottom="@dimen/margin_bottom_button_option"
        android:text="Opção de exemplo"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_button_option"
        app:cornerRadius="8dp"
        android:backgroundTint="@color/button_option"
        android:textColor="@color/white" />

</FrameLayout>